#mapFollow_wrapper, #search_link_wrapper {
  position: fixed;
  top: 100px;
  width: 110px;
  border: 3px solid $blue;
  background: #ffffff;
  text-align: center;
  padding: 5px;
  @include radius(5px);
  font-size: 15px;
  box-shadow: 1px 1px 4px rgba(90,100,117,0.5);
}
#search_link_wrapper {
  padding-top: 5px;
  top: 160px;
}
#search_link_wrapper a {
  color: $grey;
  font-style: italic;
  text-decoration: none;
}
#search_link_wrapper a:hover  {
  text-decoration: underline;
  cursor: pointer;
}
#mapFollow_wrapper {
  top: 220px;
  border: 3px solid $darkgrey;
  background: $blue;
}
#mapFollow_wrapper input {
  margin: 0;
}
.toggle_btn_reg {
  left: 43%;
}
.redo_gone {
  height: 0 !important;
  padding-bottom: 0 !important;
  padding-top: 0 !important;
  margin-bottom: 0 !important;
}
#by_type_id, #by_operator_id, #by_zone_id, #by_city_id {
  width: 34%;
  font-size: 16px !important;
}
form select#by_location_id, form select#by_machine_id {
  width: 42%;
  font-size: 16px !important;
  @include radius(0);
}
.active_section_link {
  background-color: $darkgrey !important;
  color: $lightgrey !important;
  box-shadow: none !important;
  -moz-box-shadow: none !important;
  -webkit-box-shadow: none !important;
}
a.active_section_link:hover {
  background: #1C150B !important;
}

