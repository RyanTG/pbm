@-moz-keyframes colorChange {
    0% {
        color: #2e2322;
    }
    50% {
        color: $darkgrey;
        text-shadow: 1px 1px 5px #CCCCCC;
        background-color: $blue;
    }
    100% {
        color: #2e2322;
    }
}
@keyframes colorChange {
    0% {
        color: #2e2322;
    }
    50% {
        color: $darkgrey;
        text-shadow: 1px 1px 5px #CCCCCC;
        background-color: $blue;
    }
    100% {
        color: #2e2322;
    }
}
@-o-keyframes colorChange {
    0% {
        color: #2e2322;
    }
