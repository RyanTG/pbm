/*
 *= require jquery-ui
 */

@font-face {
  font-family: 'Freight-MedSC';
  src: url(<%= asset_path "freight-sans-medium-sc-opentype.otf" %>);
}
@import url('https://fonts.googleapis.com/css?family=Work+Sans');

/** variables **/

$sans: "Freight-MedSC",sans-serif;
$serif: 'Work Sans',sans-serif;
$red: #F53240;
$blue: #D3ECFF;
$grey: #6a7d8a;
$lightgrey: #f5fbff;
$medgrey: #97a5af;
$darkgrey: #4b5862;
$black: #000e18;

/** mixins **/

@mixin radius ($radii...) {
  border-radius: $radii;
}
@mixin padding ($pads...) {
  padding: $pads;
}
@mixin set ($width, $height, $padding, $margin) {
  width: $width;
  height: $height;
  padding: $padding;
  margin: $margin;
}

/** Core **/

* {
  outline: none;
}
*, *:before, *:after {
  box-sizing: inherit;
}
.clear {
  clear: both;
}
button::-moz-focus-inner {
  padding: 0 0 2px 0 !important;
  border: 0 none !important;
}
html {
  min-height: 100%;
  position: relative;
  box-sizing: border-box;
  background: $lightgrey;
}
body {
  margin: 0 auto;
  padding: 0px;
  background-color: $lightgrey;
  background-size: 4px auto;
  color: $black;
  font-family: $sans;
  -webkit-font-smoothing: antialiased;
}
p, form.new_user, form.edit_user {
  font-size: 16px;
  line-height: 22px;
}
img {
  border: 0;
}
h1 {
  font-size: 36px;
}
hr {
  border: 1px solid $blue;
  width: 90%;
}
a {
  color: #383838;
  text-decoration: underline;
  border: 0;
}
a:hover, a:active {
  text-decoration: underline;
  color: $red;
}
input, textarea {
  -webkit-appearance: none;
  @include radius(0);
  font-family: $serif;
}
input[type=checkbox] {
  -webkit-appearance: checkbox;
}
.palatino {
  font-family: $serif;
}
.serif {
  font-family: $serif;
}
.sans {
  font-family: $sans;
}
select {
  font-family: Helvetica,Arial,sans-serif;
}
ul {
  font-size: 16px;
}
li {
  padding: 2px 0 6px 4px;
}
li a:hover {
  text-decoration: underline;
}
ul li li {
  list-style-type: decimal;
}
.notbold {
  font-weight: normal;
}
.subpage_text {
  font-size: 14px;
  letter-spacing: .3px;
}
.bg_gray {
  background-color: $lightgrey;
}
.bg_blue {
  background-color: $blue;
}
.grey {
  color: $grey;
}
.w_320 {
  width: 320px;
}
.w_400 {
  width: 400px;
}
.w_450 {
  width: 450px;
}
.w_560 {
  width: 560px;
}
.w_640 {
  width: 640px;
}
.w_95 {
  width: 95px !important;
}
.w_auto {
  width: auto !important;
}
.mt_0 {
  margin-top: 0 !important;
}
.mt_5 {
  margin-top: 5px;
}
.mt_10 {
  margin-top: 10px;
}
.mt_30 {
  margin-top: 30px;
}
.mb_0 {
  margin-bottom: 0;
}
.pb_10 {
  padding-bottom: 10px;
}
.pt_10 {
  padding-top: 10px;
}
.m_10 {
  margin: 10px;
}
.ta_c {
  text-align: center;
}
.inline {
  display: inline !important;
}
.gray_bg {
  @include radius(5px);
  background-color: $lightgrey;
}
.no_gray_bg {
  radius: none;
  background-color: none;
}

/* Text */

.intro {
  font-size: 18px;
}
.dark {
  color: #0b252b;
}
.darkb, .darkbl {
  color: $red;
  text-shadow: 0.1px 0.1px 0.1px white;
  font-family: $sans;
  font-size: 18px;
  font-weight: bold;
}
.red {
  color: $red;
}
.darkbl {
  color: $darkgrey;
}
h1 {
  font-size: 28px;
  line-height: 32px;
  padding: 0;
  margin: 15px 0;
  text-align: center;
  font-family: $sans;
  font-weight: bold;
}
.italic {
  font-style: italic;
}
.bold {
  font-weight: bold;
}
.hello, #intro .hello {
  font-size: 28px;
  line-height: 36px;
  text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.8);
  margin: 0;
  font-weight: 700;
  color: $red;
}

/** END Core **/

/** Login **/

#login {
  background: none repeat scroll 0 0 #fdfcfe;
  border: 2px solid $lightgrey;
  padding: 0 15px 10px;
}
#login label.password,
#login label.email,
#login label.string {
  display: block;
  font-size: 20px;
}
#login input.boolean {
  @include set(16px,16px,0,0 5px 0 0);
  font-size: 12px;
  border: 1px solid $darkgrey;
}
form.new_user .input, form.edit_user .input,
form.new_user .form-actions, form.edit_user .form-actions {
  margin-top: 10px;
}
#login abbr {
  border: none;
}
.page_login {
  max-width: 710px;
  margin: 0 auto;
}
.login_why_inner {
  width: 270px;
  background-color: $lightgrey;
  border: 2px solid $blue;
  float: left;
  padding: 10px;
  margin-top: 10px;
}
.login_why_inner p.why_login {
  font-size: 18px;
  font-weight: bold;
}
.login_why_inner p {
  margin: 10px 0 5px 0;
}
.login_slash {
  color: $darkgrey;
}
.error_notification {
  color: $red;
  line-height: 16px;
  background: $blue;
  text-align: center;
  font-style: italic;
  padding: 4px;
}

/** Stats **/

div.stats {
  line-height: 22px;
  border-bottom: 1px solid $red;
  padding: 20px 0;
}
.stat_num_o {
  width: 50px;
  float: left;
}
.stats_o {
  margin-left: 5px;
}
span.stats {
  background: $blue;
  font-size: 32px;
  line-height: 32px;
  padding: 5px;
  float: left;
  margin-top: -10px;
  margin-left: 5px;
  color: $red;
}
.stats_text {
  margin-left: 45px;
}
.stats_list {
  display: block;
  margin: 10px 15px 5px 15px;
}
div.stats span.stats_list span {
  display: inline;
}
div.stats span.stats_list span.score_machine,
div.stats span.stats_list span.score_score {
  display: block;
}

/** Home **/

ul.twitter {
  list-style-type: none;
  padding: 0;
  margin-bottom: 0;
}
.twitter li {
  padding: 5px 0;
  border-bottom: 1px solid #DECEB9;
  font-family: $serif;
  color: #452809;
  font-size: 13px;
}
.twitter li:nth-child(5) {
  border: none;
}
.twitter_img img {
  @include radius(5px);
  margin: 3px 5px 2px 0;
  float: left;
}
p.twitter_box {
  font-family: $serif;
  font-size: 14px;
  line-height: 18px;
}
p.notice {
  color: $red;
  font-size: 18px;
  text-align: center;
  margin: -10px auto 10px;
  width: 100%;
}
.thanks, p.alert {
  font-size: 28px;
  line-height: 36px;
  text-align: center;
  margin: 25px auto 0;
  color: $red;
  border-bottom: 1px solid #c3c0bc;
  border-top: 1px solid #c3c0bc;
  padding: 10px;
}
#flash_recaptcha_error {
  display: none;
}
#flash-message {
  width: 100%;
  float: left;
}
#flash-message #flash_notice,
#flash-message #flash_alert,
#flash_error {
  color: $blue;
  font-size: 28px;
  text-align: center;
  top: 200px;
  right: 0;
  left: 0;
  height: 100px;
  width: 475px;
  margin: auto;
  padding: 5px;
  background: #322a32;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 150;
}
#page.submitted #flash-message #flash_alert {
  display: none !important;
}
#home_top_container {
  width: 960px;
  margin: 0 auto;
}
.home_intro p, span.why_login, .home_more {
  font-family: $serif;
}

/** END Home **/

/** Store **/

.store_img {
  margin-top: 2px;
  border: 2px solid $blue;
}
.store_shirt {
  width: 420px;
  height: 578px;
}
.store_stickers {
  width: 420px;
  height: 222px;
}
.store_sticker {
  width: 420px;
  height: 246px;
}

/** Header **/

#header {
  z-index: 60;
  top: 0;
  margin: 0 auto 0;
  width: 100%;
  min-width: 768px;
  height: 52px;
  background: $blue;
}
#header a {
  text-decoration: none;
}
#page_home {
  width: 800px;
  margin: 20px auto;
}
#page {
  height: 50px;
}
.header_fixed {
  position: fixed;
}
#header span.region_name_page a:hover {
  box-shadow: none;
  text-decoration: none;
  border: none;
  background: transparent;
}
#header .menu_link ul, #header ul.other_regions_list {
  font-size: 12px;
  line-height: 24px;
  margin-top: -2px;
  padding: 10px 0 10px 0;
  text-align: left;
  display: none;
  box-shadow: 5px 7px 10px rgba(90, 100, 117, 0.5);
}
#header .menu_link hr {
  height: 1px;
  background: $red;
  border: 0;
  margin: 2px 10px;
}
#header div.menu_link {
  width: 50px;
  font-size: 32px;
  line-height: 54px;
  height: 50px;
  text-align: center;
  float: left;
}
#header div.menu_link:hover {
  cursor: pointer;
}
#header .menu_link ul li {
  list-style-type: none;
  position: relative;
  display: inline;
  padding: 0;
}
#header .menu_link ul {
  font-size: 14px !important;
  color: #55413F;
  width: 165px;
  background: $lightgrey;
  position: relative;
  z-index: 200;
}
#header .menu_link ul li a {
  text-align: left !important;
  padding: 4px 15px;
  float: none;
  display: block;
  text-decoration: none;
  vertical-align: middle;
  width: auto !important;
  font-size: 16px;
  line-height: 16px;
  font-weight: bold;
  background-color: $lightgrey;
}
#header .menu_link ul li a:hover {
  color: $darkgrey;
  background-color: $blue;
}
#header .menu_home ul li a {
  background-color: $blue;
}
#header .menu_home ul li a:hover {
  background-color: $lightgrey;
}
#header .menu_link ul li.menu_header_01,
#header .menu_link ul li.menu_header_02,
#header .menu_link ul li.menu_header_03 {
  display: none;
}
#header a.logo_link img {
  border: 0 none;
  height: 50px;
  margin-left: 15px;
}
a.logo_link {
  float: right;
  margin: 1px 0 auto;
  padding: 0 13px 0 0;
  height: 50px;
}
#header .region_logo_dropdown {
  width: 164px;  
}
#header li:hover ul, li.over ul, #header li ul li, #header .region_logo_dropdown ul li {
  display: block;
}
#header .region_logo_dropdown ul {
  background: $blue;
}
#header li ul,
#header .region_logo_dropdown ul {
  display: none;
  z-index: 100;
  line-height: 100%;
  list-style: none;
  padding: 8px 5px 5px;
  border-top: none;
  background: $lightgrey;
  @include radius(0 0 5px 5px);
}
#header ul.other_regions_list {
  font-size: 16px;
  position: absolute;
  width: 250px;
  max-height: 500px;
  overflow: auto;
  border-top: none;
  z-index: 100;
  font-weight: bold;
  background: $blue;
  margin-top: 15;
}
#header ul.other_regions_list a,
#header ul.other_regions_list a:hover {
  text-decoration: none;
  border: none;
  background: transparent;
  padding: 0;
  color: $darkgrey;
  vertical-align: middle;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
}
#header ul.other_regions_list a:hover {
  color: $red;
}
.other_regions_arrow:after {
  content:"";
  background: url(<%= asset_path 'arrow-sprite-dark.png' %>) no-repeat;
  display: inline-block;
  height: 7px;
  margin-left: 2px;
  width: 7px;
  padding-left:1px;
  vertical-align: middle;
}
.feed_icon:before {
  content:"";
  background: url(<%= asset_path 'feed-icon-10x10.png' %>) no-repeat;
  display: inline-block;
  height: 10px;
  margin: 0 3px 2px 1px;
  width: 10px;
  vertical-align: middle;
}
.header_buttons_container {
  display: flex;  
  flex-flow: row wrap;
  font-weight: bold;
  text-align: center;
  max-width: 1100px;
}
.header_buttons_child {
  margin: auto;
}
.login {
  float: left;
}
.login_alert a {
  text-decoration: none;
}
#header .login a:hover, #header .login_new a:hover, .login_alert a:hover {
  text-decoration: underline;
}
.login a, .login_new a, .login_alert a {
  color: $red;
  font-weight: bold;
}
.login_alert {
  font-style: italic;
  background: #fff1f1;
  line-height: 22px;
  font-family: $sans;
}
.location_detail .login_alert {
  text-align: center;
}
span.why_login {
  font-size: 14px;
  color: #6b6b6b;
  line-height: 16px;
  display: block;
  padding: 5px 0 0;
}
#login .button {
  color: $lightgrey;
  font-size: 18px;
  line-height: 18px;
  height: 36px;
  font-weight: bold;
  padding: 6px 6px;
  @include radius(6px);
  margin: 7px 0px;
  border: 2px solid $grey;
  background-color: $darkgrey;
  box-shadow: 1px 1px 3px #888;
  font-family: $sans;
  text-transform: uppercase;
}
#login .button:hover {
  cursor: pointer;
  background: $grey;
}
#login .reset-password .button,
#login .confirmation .button {
  cursor: pointer;
  width: 100%;
  font-size: 12px;
}
#login .error {
  font-style: italic;
  color: red;
}
#login a {
  font-weight: bold;
  font-size: 18px;
}
.region_name_page,
#header span.region_name_page a {
  color: $red;
  font-size: 20px;
  line-height: 22px;
  font-family: $sans;
  text-align: center;
  @include radius(0);
  display: block;
  font-weight: bold;
}

/** END Header **/

/** map **/

.beta {
  position: absolute;
  top: 5px;
  right: 100px;
  color: yellow;
  text-shadow: 4px 4px $red;
  font-size: 36px;
  font-weight: bold;
}
a.beta:hover {
  color: $red;
  text-shadow: 4px 4px yellow;
}
form#address_search_form input.lookup_search_input {
  margin-bottom: 5px;
}
.map_input {
  display: block;
}
.map_input span {
  width: 100px;
  display: inline-block;
  padding-left: 15px;
}
#lookup.map_lookup {
  padding: 135px 10px 10px 10px;
}

/** END map **/

/** Footer **/

#footer {
  z-index: 60;
  position: absolute;
  bottom: 0;
  margin: 0 auto 0;
  width: 100%;
  height: 20px;
  text-align: center;
  line-height: 20px;
  background: $blue;
}
#footer.footer_region {
  position: fixed;
}
#footer a {
  text-decoration: none;
}
.footer_api {
  padding-left: 10px;
}
.footer_github:before {
  content: "";
  background: url(<%= asset_path 'GitHub-Mark-32px.png' %>) no-repeat center center;
  width: 18px;
  height: 12px;
  display: inline-block;
  background-size: 12px 12px;
  margin-left: 10px;
}
.footer_donate:before {
  content: "";
  background: url(<%= asset_path 'donate-sprites.png' %>) no-repeat 0px top;
  width: 18px;
  height: 12px;
  display: inline-block;
  background-size: 14px !important;
  margin-left: 10px;
}
.footer_donate:hover:before {
  content: "";
  background-position: 0px -12px;
}
.footer_contact:before {
  content: "";
  background: url(<%= asset_path 'contact-sprites.png' %>) no-repeat 0px top;
  width: 14px;
  height: 12px;
  display: inline-block;
  background-size: 12px !important;
}
.footer_contact:hover:before {
  content: "";
  background-position: 0px -12px;
}

/** END Footer **/

