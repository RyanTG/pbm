#zone_section_link,
#machine_section_link,
#city_section_link,
#location_section_link,
#type_section_link {
  font-size: 16px;
  line-height: 16px;
  border: 2px solid $medgrey;
  color: $darkgrey;
  background-color: $lightgrey;
  @include radius(3px);
  margin-left: 5px;
  box-shadow: 2px 2px 2px #cccccc;
  -moz-box-shadow: 2px 2px 2px #cccccc;
  -webkit-box-shadow: 2px 2px 2px #cccccc;
}
.section {
  padding: 7px 5px 3px;
  height: 40px;
}
span.or {
  font-size: 16px;
  position: absolute;
  background: $medgrey;
  height: 28px;
  line-height: 26px;
  width: 22px;
  text-align: center;
  color: #FFFFFF;
  font-style: italic;
  padding-right: 5px;
}
.search_field_container {
  width: 54%;
  height: 28px;
  border: 2px solid $medgrey;
  float: right;
  background: #FFFFFF;
  @include radius(0 2px 2px 0);
}
.location_search .search,
#form .search_other_button input {
  border: none;
  height: 28px;
  margin: -2px -2px 0 0;
  @include radius(0 2px 2px 0);
  padding: 5px 25px;
  background: $darkgrey;
  color: $lightgrey;
  font-weight: bold;
  float: right;
  box-shadow: none;
