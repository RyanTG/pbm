  float: none;
  margin: 5px 10px;
}

.login_new_div {
  float: none;
  margin-top: 10px;
}

p.notice {
  margin: 10px auto 10px;
  width: 100%;
}

.ui-autocomplete {
  position: absolute;
  max-width: 80vw;
  max-height: calc(60vw);
}

@media (max-width: 915px) {

  #form {
    left: 0;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    -moz-border-bottom-left-radius: 0;
    -moz-border-bottom-right-radius: 0;
    -webkit-border-bottom-left-radius: 0;
    -webkit-border-bottom-right-radius: 0;
  }

  #lookup {
    left: 0;
    float: none;
  }
}

.p1 {
  font-size: 24px;
  line-height: 34px;
}

p.welcome {
  font-size: 16px !important;
  line-height: 24px !important;
}

.news {
  width: auto;
  min-width: 100%;
  margin: 0;
}

.news img {
  display: block;
  margin: 10px auto;
}

.news p,
.region_map p {
  margin: 10px;
}

.mobile_flex {
  flex-direction: column;
}

.mobile_center {
  text-align: center;
}

.p3 a:hover {
  box-shadow: 3px 3px #ae9bd1;
}

/* map api */

#map .maplibregl-ctrl-top-right,
#map .maplibregl-ctrl-bottom-right {
  right: 0;
}

/* Jump to top button */

#top_button {
  bottom: 20px;
  right: 20px;
  left: auto;
}
