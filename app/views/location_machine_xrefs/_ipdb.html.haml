.external_machine_link
  - if (lmx.machine.ipdb_id.blank?)
    = link_to "IPDB", "http://ipdb.org/search.pl?name=#{lmx.machine.name};qh=checked;searchtype=advanced"
    = link_to image_tag( 'open-in-new-black.png', :alt => 'open in new window', :class => 'external_machine_link_icon'), "http://ipdb.org/search.pl?name=#{lmx.machine.name};qh=checked;searchtype=advanced", :target => '_blank'
  - else
    = link_to "IPDB", "http://www.ipdb.org/machine.cgi?id=#{lmx.machine.ipdb_id}", :target => '_blank'
    = link_to image_tag( 'open-in-new-black.png', :alt => 'open in new window', :class => 'external_machine_link_icon'), "http://www.ipdb.org/machine.cgi?id=#{lmx.machine.ipdb_id}", :target => '_blank'
