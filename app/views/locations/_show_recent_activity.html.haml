- icon_path = image_tag('icons/newspaper-variant-outline.svg', :alt => 'Recent Activity Icon', :class => 'banner_icon')
= banner('show_recent_activity_location', 'Location activity', icon_path, location)
%div[location, :show_recent_activity]{:style => 'display:none'}
  = render :partial => 'locations/render_recent_activity', :locals => {:location => location}
